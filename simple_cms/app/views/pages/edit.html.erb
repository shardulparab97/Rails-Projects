<%= link_to("Back to list" ,pages_path, :class => 'back-link')%>

<div class="pages edit">
  <h2>Edit subject</h2>
  <%= form_for(@page) do |f| %>
      <!-- form for is smart
      otherwise we have to do:
      <#%= form_for(@subject),:url => subject_path(@subject),:method => 'patch' %> -->
      <!--post creates a new object on the resource.However ,the helper is smart,url and method is optional  -->
      <table summary="Subject form fields" >
        <tr>
          <th>Name</th>
          <td><%= f.text_field(:name) %></td>
        </tr>


        <tr>
          <th>Position</th>
          <td><%= f.text_field(:subject_id) %></td>
        </tr>

        <tr>
          <th>Position</th>
          <td><%= f.text_field(:permalink) %></td>
        </tr>

        <tr>
          <th>Position</th>
          <td><%= f.text_field(:position) %></td>
        </tr>

        <tr>
          <th>Visisble</th>
          <td><%= f.text_field(:visible) %></td>
        </tr>
      </table>

      </div>

      <div class="form-buttons">
        <%= f.submit("Update Page") %>
      </div><% end %>
